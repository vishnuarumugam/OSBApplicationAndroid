<!-- rounded_rectangle_white.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the solid background color to white -->
    <solid android:color="@color/white" />

    <!-- Set the stroke (border) properties -->
    <stroke
        android:width="1dip"
        android:color="@color/app_color_dark" /> <!-- Border width --><!-- Border color -->

    <!-- Set the corner radius to 10dp -->
    <corners android:radius="10dp" />

</shape>